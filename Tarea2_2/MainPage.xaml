<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="Ejercicio2_2.MainPage"
             Title="Registrar Firma" BackgroundColor="AntiqueWhite">

    <StackLayout VerticalOptions="Start" Padding="20">
        <mct:DrawingView
                x:Name="drawingView"
                BackgroundColor="LightGray"
                WidthRequest="300"
                HeightRequest="300"
                HorizontalOptions="Center"/>

        <Entry x:Name="_txtNombre" Placeholder="Nombres" Margin="0,80,0,10"/>
        <Entry x:Name="_txtDescripcion" Placeholder="Descripción" Margin="0,0,0,10"/>

        <StackLayout Orientation="Horizontal" Margin="50">
            <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" BackgroundColor="Yellow" TextColor="Black" Margin="-5,0,10,0" />
            <Button x:Name="btnLista" Text="Lista de Firmas" Clicked="btnLista_Clicked" BackgroundColor="GreenYellow" TextColor="Black" Margin="50,0,10,0"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
